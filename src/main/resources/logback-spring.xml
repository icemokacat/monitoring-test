<?xml version="1.0" encoding="UTF-8" ?>
<configuration>

    <!--<include resource="org/springframework/boot/logging/logback/defaults.xml"/>-->

    <!-- 로그 출력 색상 설정 -->
    <conversionRule conversionWord="clr" class="org.springframework.boot.logging.logback.ColorConverter"/>

    <!-- 콘솔 로그 출력 포맷 설정 -->
    <property name="CONSOLE_LOG_PATTERN" value="%d{yyyy.MM.dd HH:mm:ss.SSS} %magenta([%thread]) %highlight([%-3level]) %logger{5} - %msg %n" />

    <!-- 파일 로그 출력 포맷 설정 -->
    <property name="FILE_LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %5level %logger - %msg%n"/>

    <!-- console log 설정 -->
    <appender name="CONSOLE-OUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <appender name="consoleSQL" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy.MM.dd HH:mm:ss.SSS} [%thread] %-5level %logger{5} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- file log 설정 -->
    <import class="ch.qos.logback.classic.encoder.PatternLayoutEncoder"/>
    <import class="ch.qos.logback.core.rolling.RollingFileAppender"/>
    <import class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy"/>

    <!-- 배포환경별 로그 출력 설정 -->

    <!-- locals -->
    <springProfile name="locals">
        <logger name="jdbc.audit" level="WARN"/>
        <logger name="jdbc.connection" level="WARN"/>
        <logger name="jdbc.resultsettable" level="WARN"/>
        <logger name="jdbc.sqltiming" level="WARN"/>
        <logger name="jdbc.resultset" level="WARN"/>

        <logger name="jdbc.sqlonly" level="INFO" additivity="false">
            <appender-ref ref="consoleSQL"/>
        </logger>

        <!-- level 단계 : TRACE < DEBUG < INFO < WARN < ERROR -->
        <root level="INFO">
            <appender-ref ref="CONSOLE-OUT"/>
        </root>
    </springProfile>

    <!-- product -->
    <springProfile name="product">
        <appender name="FILE-LOG" class="RollingFileAppender">
            <file>logs/catalina.log</file>
            <encoder>
                <pattern>${FILE_LOG_PATTERN}</pattern>
            </encoder>
            <rollingPolicy class="TimeBasedRollingPolicy">
                <fileNamePattern>logs/catalina.%d{yyyy-MM-dd}.log</fileNamePattern>
                <maxHistory>30</maxHistory>
                <totalSizeCap>1GB</totalSizeCap>
            </rollingPolicy>
        </appender>
        <root level="INFO">
            <appender-ref ref="FILE-LOG" />
        </root>
    </springProfile>

</configuration>